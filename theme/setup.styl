

// $debug-mode ?= true
$debug-mode ?= false

$border-box ?= true
// $border-box ?= false

/*
 * Base Vars
 */

$base-font-size ?= 16
$base-line-height ?= 24
//$ratio ?= 1.618

$biggest ?= 72
$bigger ?= 48
$big ?= 36

$h1-size ?= 36
$h2-size ?= 30
$h3-size ?= 24
$h4-size ?= 20
$h5-size ?= 16
$h6-size ?= 14

$smaller ?= 12
$tiny ?= 10
$micro ?= 8

/*
 * Responsive Vars
 */

$responsive = true  // Will select responsive grid
$flexible-media = true

/*
 * Base Line-height
 */

$base-spacing-unit ?= unit($base-line-height, px)
$half-spacing-unit ?= unit(($base-spacing-unit / 2), px)
$line-height-ratio ?= ($base-line-height / $base-font-size)

/*
 * Grid Defaults
 *
 * These values will calculate the grid setup, number of columns and its gutters. The gutter width is the padding inside
 * the column. Assuming Borderbox.
 */

$totalcolumns ?= 12
$gutterwidth ?= unit(10, px)

/* 
 *Setup and initialize breakpoints in the grid. Only used when $responsive = true
 */

$small-break = unit(500, px)
$small-active = true

$medium-break = unit(768, px)
$medium-active = true

$large-break = unit(1005, px)
$large-active = true

$xlarge-break = unit(1300, px)
$xlarge-active = false


/*
 * Theme Defaults
 */

$main-color = #5e6d81
$light-color = #fff
$dark-color = #323a45
$accent-color = #f27935
$brand-face = 'regular', sans-serif
$brand-face-bold = 'bold', sans-serif
$brand-face-light = 'light', sans-serif
$main-face = 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
$main-face-bold = 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif
$brand-radius = 4px

$body-face = 'Helvetica Neue', Helvetica, Arial, 'Lucida Grande', sans-serif

$overlay-color ?= rgba(0, 0, 0, 0.8)
$background-color = #333
$brand-link-color ?= #ff6d2c

