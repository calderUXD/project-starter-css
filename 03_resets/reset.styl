/*------------------------------------*\
    !-RESET
\*------------------------------------*/
/**
 * Thanks to: csswizardry.com/2011/10/reset-restarted
 */

/**
 * Globally apply the borderbox if gloabal variable in settings is set to true.
 */ 

if $border-box == true
  *
    &,
    &:before,
    &:after
      vendor(box-sizing, border-box)

/**
 * set the padding and margin to zero.
 */
h1,h2,h3,h4,h5,h6,
p,blockquote,pre,
dl,dd,ol,ul,
form,fieldset,legend,
table,th,td,caption,
hr
    margin:0
    padding:0


/**
 * Give a help cursor to elements that give extra info on `:hover`.
 */
abbr[title],dfn[title]
    cursor:help


/**
 * Remove underlines from potentially troublesome elements.
 */
a,u,ins
    text-decoration:none


/**
 * Apply an underline with a bottom border.
 */
ins
    border-bottom:1px solid


/**
 * So that `alt` text is visually offset if images donâ€™t load.
 */
img
    font-style:italic


/**
 * Form Element cursor interactions.
 */
 
label,
input,
textarea,
button,
select,
option
    cursor:pointer

    .text-input:active,
    .text-input:focus,
    textarea:active,
    textarea:focus
        cursor:text
        outline:none
    