/*------------------------------------*\
    !-OPTION BAR
\*------------------------------------*/

.option-bar
    @extend .nav-block
    > li
        > a
            border:0 solid $base-ui-color 
            border-width:1px
            border-left-width:0
            
    &:first-child > a
        border-left-width:1px
        border-top-left-radius:$brand-radius
        border-bottom-left-radius:$brand-radius
        
    &:last-child > a
        border-top-right-radius:$brand-radius
        border-bottom-right-radius:$brand-radius