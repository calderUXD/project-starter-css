/*------------------------------------*\
    !-LISTS
\*------------------------------------*/
/**
 * Remove vertical spacing from nested lists.
 */
li
    > ul,
    > ol
         margin-bottom:0
     

.numbered-list
    list-style-type:decimal

/// basic grid like list
.grid-list
    @extend .cf
    list-style:none
    margin-left:0
    
    > li
    	float:left

/**
