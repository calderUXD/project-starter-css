		float:left

        .grid-list-link
            @extend .block-list-link
*/
/// column numbers
.one-cols > li
    width:100%

.two-cols > li
    width:50%

.three-cols > li
    width:33.333%

.four-cols > li
    width:25%

.five-cols > li
    width:20%

.six-cols 
    > li
        width:16.66%


.grid-list > .all-cols,
.multi-list > .all-cols
    width:100%


