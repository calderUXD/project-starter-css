/*------------------------------------*\
    !-FORMS
\*------------------------------------*/


fieldset
    padding:$base-spacing-unit

/**
 * Text inputs
 * 
 * Instead of a `[type]` selector for each kind of form input, we just use a
 * 
 */

.text-input, textarea
  calc-font-size($base-font-size)
  line-height:@line-height

/**
 * Group sets of form fields in a list by adding field-group class.
 */

.frm-group
    list-style:none
    margin:0

    .form-fields > li
        base-bottom-margin()
    
    .form-fields > li:last-child
        margin-bottom:0
    
label,.label
    display:block
    calc-font-size($base-font-size)

    .label-help
        display:block
        font-weight:normal

.check-list
    list-style:none
    margin:0

    .check-label, label, .label
        display:inline-block
    


/**
 * Spoken forms are for forms that read like spoken word, e.g.:
 * 
   <li class=spoken-form>
       Hello, my <label for=spoken-name>name</label> is
       <input type=text class=text-input id=spoken-name>. My home
       <label for=country>country</label> is
       <select id=country>
           <option>UK</option>
           <option>US</option>
           <option>Other</option>
       </select>
   </li>
 * 
 */
.spoken-form label
    display:inline-block
    font:inherit

select
  text-transform: capitalize

/**
 * Extra help text displayed after a field when that field is in focus, e.g.:
 * 
   <label for=email>Email:</label>
   <input type=email class=text-input id=email> 
   <small class=extra-help>.edu emails only</small>
 * 
 * We leave the help text in the document flow and merely set it to
 * `visibility:hidden`. This means that it wonâ€™t interfere with anything once
 * it reappears.
 * 
 */
/*small*/.input-help
    display:inline-block
    visibility:hidden

.text-input:active + .input-help,
.text-input:focus + .input-help
    visibility:visible
    
input#email
  text-transform: lowercase
